<h2 class="text-center page-header">{{model.name}}</h2>


<div class="row">
  <div class="col-md-3">
    {{google-maps address=model.address}}
  </div>

  <div class="col-md-4 col-md-offset-1">
  </div>

  <div class="col-md-3">
    <h2> Food Carts {{#link-to "new-cart" class="pull-right"}}<p class="btn btn-success"> Add New Cart</p>{{/link-to}} </h2>
    <ul class="list-unstyled list-group">
      {{#each cart in model.carts}}
      <li class="list-group-item">{{#link-to "cart" cart.id}}{{cart.name}}{{/link-to}}</li>
      {{/each}}
    </ul>


    {{outlet "new-cart"}}

  </div>
</div>
